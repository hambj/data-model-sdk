{
  "name": "@actito/data-model-sdk",
  "private": false,
  "version": "0.1.5",
  "description": "SDK for ACTITO data model (profile tables, linked tables and content tables)",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actito/data-model-sdk.git"
  },
  "keywords": [
    "actito"
  ],
  "author": "Alain Dresse",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/actito/data-model-sdk/issues"
  },
  "homepage": "https://github.com/actito/data-model-sdk#readme",
  "devDependencies": {
    "@types/deep-diff": "^1.0.0",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.7",
    "@types/node-fetch": "^2.3.3",
    "deep-diff": "^1.0.2",
    "jest": "^24.7.1",
    "jest-fetch-mock": "^2.1.2",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/__tests__/**",
      "!**/*.d.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "files": [
    "lib/**/*"
  ],
  "prettier": {
    "printWidth": 120
  },
  "dependencies": {
    "node-fetch": "^2.3.0"
  },
  "directories": {
    "lib": "lib"
  }
}
